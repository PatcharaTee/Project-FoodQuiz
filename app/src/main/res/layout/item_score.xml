<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6A000000">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kinder_joe"
        android:gravity="center"
        android:text="@string/demo_text"
        android:textColor="@color/orange_dark"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kinder_joe"
        android:gravity="center"
        android:text="@string/demo_text"
        android:textColor="@color/orange_dark"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/player_name"
        app:layout_constraintEnd_toStartOf="@+id/slashZero"
        app:layout_constraintTop_toTopOf="@+id/player_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/slashZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:fontFamily="@font/kinder_joe"
        android:gravity="center"
        android:text="@string/_5"
        android:textColor="@color/orange_dark"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/player_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player_score" />
</androidx.constraintlayout.widget.ConstraintLayout>